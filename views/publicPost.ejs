<%- include("partials/header", {count:count, username:username}); -%>

<div >
  <h3 >by: <a style="border-bottom: 1px solid grey ;" href="/user/public/<%=owner%>/<%=username%>"><%=owner.slice(0, owner.length-4)%></a></h3>
  <div style="text-align: center;">
    <h1 style="margin-bottom:5px; text-decoration: underline; text-shadow: 4px 4px 5px rgb(136, 136, 136); text-decoration-thickness: 2px; text-transform: capitalize; "><%=title.substring(0,20)%></h1>
    <span class="uk-label uk-label-danger"><%=tag.substring(0,20)%></span>
  </div>
  <p style="font-size:x-large;"><%=content%></p>
  <div style="margin: 50px 0">
  <a uk-tooltip="Back to Blogs" style="padding:0 10px;" class="uk-button uk-button-primary" href="/public/<%=username%>/#<%=blogId%>"><span class="uk-margin-small-right" uk-icon="icon: arrow-left; ratio: 1.5"></span>Back</a>
</div>
</div>

<%- include("partials/footer"); -%>

